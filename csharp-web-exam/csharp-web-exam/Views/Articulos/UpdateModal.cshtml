@model csharp_web.Models.Articulos
@using Newtonsoft.Json;

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title" id="myModalLabel">Modificar Articulo</h4>
</div>
<div class="modal-body">
    <div class="row" style="margin-left:10px">
        <div class="col-6">
            <label for="updateModalForm_ArticuloFieldID"> Nombre: </label>
            <input type="text" id="updateModalForm_ArticuloFieldID" class="form-control" value="@Model.Articulo" />
        </div>
        <div class="col-6">
            <label for="updateModalForm_descripcionFieldId"> Descripcion: </label>
            <input type="text" id="updateModalForm_descripcionFieldId" class="form-control" value="@Model.Descripcion" />
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <a class="btn btn-primary" id="btnModalSubmitUpdate" onclick="saveUpdate(@JsonConvert.SerializeObject(Model))">Guardar</a>
    <a class="btn btn-primary" id="btnModalSubmitNew" onclick="saveNew()">Guardar Nuevo</a>
</div>
